<p id="notice"><%= notice %></p>

<h1>Training Sessions</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Planned distance</th>
      <th>Actual distance</th>
      <th>Instructions</th>
      <th>Athletes notes</th>
      <th>Coaches notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @training_sessions.each do |training_session| %>
      <tr>
        <td><%= training_session.date %></td>
        <td><%= training_session.planned_distance %></td>
        <td><%= training_session.actual_distance %></td>
        <td><%= training_session.instructions %></td>
        <td><%= training_session.athletes_notes %></td>
        <td><%= training_session.coaches_notes %></td>
        <td><%= link_to 'Show', training_session %></td>
        <td><%= link_to 'Edit', edit_training_session_path(training_session) %></td>
        <td><%= link_to 'Destroy', training_session, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

